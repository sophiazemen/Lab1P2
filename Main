import java.rmi.registry.LocateRegistry;
import java.rmi.registry.Registry;

public class Main {
    public static void main(String[] args) {
        try {
            // Create the RMI registry
            Registry registry = LocateRegistry.createRegistry(1099);
            
            // Create and bind BSSManager
            BSSManager bssManager = new BSSManagerImpl();
            registry.rebind("BSSManager", bssManager);
            System.out.println("BSSManager is bound to registry");

            // Create and bind Process instances (example for 3 processes)
            for (int i = 0; i < 3; i++) {
                int additionalParameter = 0; // Define the additional parameter value
                Process process = new ProcessImpl(i, additionalParameter, bssManager);
                registry.rebind("Process" + i, process);
                System.out.println("Process " + i + " is bound to registry");
            }

            System.out.println("BSS Protocol server is ready.");

        } catch (Exception e) {
            System.err.println("Server exception: " + e.toString());
            e.printStackTrace();
        }
    }
}
