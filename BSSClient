import java.rmi.Naming;

public class BSSClient {
    public static void main(String[] args) {
        try {
            BSSManager bssManager = (BSSManager) Naming.lookup("rmi://localhost/BSSManager");
            Process process1 = new ProcessImpl(0, 3, bssManager);
            Process process2 = new ProcessImpl(1, 3, bssManager);

            process1.sendMessage("Hello from Process 1");
            process2.sendMessage("Hello from Process 2");

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
