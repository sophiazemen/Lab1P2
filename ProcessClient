import java.rmi.registry.LocateRegistry;
import java.rmi.registry.Registry;

public class ProcessClient {
    public static void main(String[] args) {
        try {
            // Locate the registry and lookup the processes
            Registry registry = LocateRegistry.getRegistry();
            ProcessRMI process1 = (ProcessRMI) registry.lookup("Process1");
            ProcessRMI process2 = (ProcessRMI) registry.lookup("Process2");
            ProcessRMI process3 = (ProcessRMI) registry.lookup("Process3");

            // Simulate Process 1 sending a message to Process 2
            process1.sendEvent("Hello from Process 1", process2);

            // Simulate Process 2 sending a message to Process 3
            process2.sendEvent("Hello from Process 2", process3);

            // Simulate Process 3 sending a message to Process 1
            process3.sendEvent("Hello from Process 3", process1);

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}