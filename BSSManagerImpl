import java.rmi.RemoteException;
import java.rmi.server.UnicastRemoteObject;
import java.util.ArrayList;
import java.util.List;

public class BSSManagerImpl extends UnicastRemoteObject implements BSSManager {
    private List<Process> processList;

    public BSSManagerImpl() throws RemoteException {
        processList = new ArrayList<>();
    }

    @Override
    public void sendMessage(int senderId, String message, int[] vectorClock) throws RemoteException {
        System.out.println("Process " + senderId + " is sending message: " + message);

        // Deliver the message to all registered processes
        for (Process process : processList) {
            process.deliverMessage(senderId, message, vectorClock);
        }
    }

    @Override
    public void registerProcess(Process process) throws RemoteException {
        processList.add(process);  // Registering the process
        System.out.println("Process registered.");
    }
}
